
<MainScreen>:
    orientation: "horizontal"
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True

        Label:
            size_hint_x: .7
            text: "list of filenames"
    BoxLayout:
        orientation: "vertical"
        size_hint_x: .3
        Button:
            text: "Load"
            on_press:
        Button:
            text: "Rename"
        Label:
            text: "Description"

<LoadScreen>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filedirectory
        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "Select"
                on_release: root.load(filedirectory.selection)
            Button:
                text: "Cancel"
                on_release: root.cancel()