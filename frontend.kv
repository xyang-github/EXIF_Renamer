
<MainScreen>:
    orientation: "horizontal"
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        Label:
            id: filenames
            size_hint_x: .7
            text:
    BoxLayout:
        orientation: "vertical"
        size_hint_x: .3
        Button:
            text: "Select Files"
            on_press: root.select()
        Button:
            text: "Rename"
            on_press: root.rename()
        Label:
            text: "Description"

<SelectDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filedirectory
            multiselect: True
        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "Select"
                on_release: app.root.select_files(filedirectory.selection)
            Button:
                text: "Cancel"
                on_release: root.cancel()