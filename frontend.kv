
<MainScreen>:
    canvas.before:
        Color:
            rgba: 168/255, 213/255, 226/255, 1
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: "horizontal"
    BoxLayout:
        orientation: "vertical"
        Label:
            canvas.before:
                Color:
                    rgba: 84/255, 140/255, 47/255, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: .05
            bold: True
            text: "Original Filename"
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            Label:
                id: original_filenames
                size_hint_x: .5
                text_size: self.width, self.height
                halign: "left"
                valign: "top"
                color: 16/255, 73/255, 17/255, 1
                text:
    BoxLayout:
        orientation: "vertical"
        Label:
            canvas.before:
                Color:
                    rgba: 255/255, 212/255, 73/255, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: .05
            bold: True
            text: "New Filename"
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            Label:
                id: new_filenames
                size_hint_x: .5
                text_size: self.width, self.height
                halign: "left"
                valign: "top"
                color: 219/255, 137/255, 6/255, 1
                text:
    BoxLayout:
        orientation: "vertical"
        size_hint_x: .3
        Button:
            text: "Select Files"
            on_press: root.select()
        Button:
            text: "Rename"
            on_press: root.rename()
        Label:
            text: "Description"

<SelectDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filedirectory
            multiselect: True
        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "Select"
                on_release: app.root.select_files(filedirectory.selection)
            Button:
                text: "Cancel"
                on_release: root.cancel()